<% include ../partials/header(gallery) %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= card.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/gallery/<%=card._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= card.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= card.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= card.description %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="<%= card.price %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            <a href="/gallery">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>